<shortcuts> 
   <programGroup defaultName="MultiSakura" location="applications"/> 
   <shortcut name="MultiSakura ${project.version}" 
             target="$INSTALL_PATH/multisakura.exe" 
             description="MultiSakura" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multisakura.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiSakura ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiSakura" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>
